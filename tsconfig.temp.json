{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "noEmit": false,
    "noEmitOnError": false,
    "outDir": "js-output",
    "declaration": false,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "/*": ["src/lib/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.mts"],
  "exclude": ["node_modules", ".svelte-kit"]
}
